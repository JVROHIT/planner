# ===========================================
# FocusFlow Environment Configuration
# ===========================================
# Copy this file to .env and fill in values
# NEVER commit .env to version control
# ===========================================

# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_NAME=FocusFlow
APP_PORT=8080

# ===========================================
# MONGODB CONFIGURATION
# ===========================================
# Format: mongodb://[username:password@]host:port/database
MONGODB_URI=mongodb://localhost:27017/focusflow
MONGODB_DATABASE=focusflow

# ===========================================
# REDIS CONFIGURATION
# ===========================================
# From Redis Cloud "Public endpoint":
# Example: redis-10635.c273.us-east-1-2.ec2.cloud.redislabs.com:10635
REDIS_HOST=redis-10635.c273.us-east-1-2.ec2.cloud.redislabs.com
REDIS_PORT=10635

# Get this from Redis Cloud -> Edit -> Security / Access Control
REDIS_PASSWORD=PASTE_PASSWORD_FROM_REDIS_CLOUD

# Redis logical DB (0â€“15)
REDIS_DATABASE=0

# Connection timeout in milliseconds
REDIS_TIMEOUT=2000

# Optional: for your own reference
REDIS_DASHBOARD=https://cloud.redis.io/

# ===========================================
# JWT SECURITY CONFIGURATION
# ===========================================
# Generate with:
#   openssl rand -base64 32
# Must be at least 32 characters
JWT_SECRET=CHANGE_ME_USE_STRONG_RANDOM_SECRET_MIN_32_CHARS

# Token expiration in milliseconds
# Default: 24 hours = 86400000
JWT_EXPIRATION_MS=86400000

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Levels: TRACE, DEBUG, INFO, WARN, ERROR
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_MONGO=WARN
LOG_LEVEL_REDIS=WARN
